<%= form_with(model: member) do |form| %>
  <% if member.errors.any? %>
    <div class="message is-danger">
        <div class="message-header">
           <p><%= pluralize(member.errors.count, "error") %> prohibited this member from being saved:</p>
        </div>

     <div class="message-body">
        <ul>
          <% member.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :firstname, class: "label" %>
    <%= form.text_field :firstname, class: "input" %>
  </div>

  <div class="field">
    <%= form.label :lastname, class: "label" %>
    <%= form.text_field :lastname, class: "input" %>
  </div>

  <div class="field">
    <%= form.label :number, class: "label" %>
    <%= form.number_field :number, class: "input" %>
  </div>

  <div class="field">
    <%= form.label :birthday, class: "label" %>
    <%= form.text_field :birthday, class: "input" %>
  </div>

  <div class="field">
    <%= form.label :team_id, class: "label" %>
    <div class="select">
    <%= form.select :team_id, Team.all.collect {|u| [u.name, u.id]} %>
    </div>
  </div>

  <div class="field">
    <%= form.label "Positions", class: "label"%>
     <div class="select">
       <%= form.select "position_id", Position.all.collect {|u| [u.name, u.id]} %>
    </div>
  </div>

  <div class="actions">
    <%= form.submit class: "button is-success" %>
  </div>
<% end %>
