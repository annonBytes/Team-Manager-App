<%= content_for :title  do %>
   Teams &ndash; <%= DateTime.now.to_s(:_date) %>
<% end %>


<div class="columns mt-6 is-centered">
    <% @teams.each do |team| %>
       <div class="column is-one-quarter">
           <div class="card">
                 <header class="card-header">
                    <p class="card-header-title">
                           <svg width="18" height="22" viewBox="0 0 18 22" fill="none" xmlns="http://www.w3.org/2000/svg">
                           <path fill-rule="evenodd" clip-rule="evenodd" d="M8.85842 14.3297C4.84092 14.3297 1.40967 14.9385 1.40967 17.3697C1.40967 19.7997 4.81967 20.426 8.85842 20.426C12.8759 20.426 16.3059 19.8235 16.3059 17.391C16.3059 14.9585 12.8972 14.3297 8.85842 14.3297Z" stroke="#5B57BA" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                           <path opacity="0.4" fill-rule="evenodd" clip-rule="evenodd" d="M8.8585 10.8599C11.4948 10.8599 13.6323 8.72363 13.6323 6.08613C13.6323 3.44988 11.4948 1.31238 8.8585 1.31238C6.22225 1.31238 4.08475 3.44988 4.08475 6.08613C4.07475 8.71363 6.196 10.8511 8.8235 10.8599H8.8585Z" stroke="#5B57BA" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                           </svg>
                     <span class="ml-2">             
                      Team
                    <span>
                    </p>
                 </header>

                <div class="card-content"> 
                   <p>
                   <span class="has-text-weight-bold">
                      <%= team.name %>
                   </span>
                   </p>
                   <p class="italic mt-4">Logged <%= time_ago_in_words(team.created_at) %> ago</p>  
                </div>


                <div class="card-footer">
                        <%= link_to 'Show', team, class: "card-footer-item" %>
                        <%= link_to 'Edit', edit_team_path(team), class: "card-footer-item"  %>
                        <%= link_to 'Destroy', team, method: :delete, data: { confirm: 'Are you sure?' }, class: "card-footer-item"  %>
                </div>

           </div>
       </div>
    <% end %>
</div>

<div class="columns is-centered mt-6">
  <%= link_to "view all members", members_path, class: "button is-link is-outlined is-centered" %>
</div>




